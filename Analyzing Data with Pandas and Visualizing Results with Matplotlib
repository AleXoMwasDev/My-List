    "\n",
    "plt.figure(figsize=(6,4))\n",
    "plt.hist(df[\"sepal length (cm)\"], bins=15, color=\"skyblue\", edgecolor=\"black\")\n",
    "plt.title(\"Distribution of Sepal Length\")\n",
    "plt.xlabel(\"Sepal Length (cm)\")\n",
    "plt.ylabel(\"Frequency\")\n",
    "plt.show()\n"
   ]
