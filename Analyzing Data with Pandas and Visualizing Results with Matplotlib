   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "672c9452",
   "metadata": {},
   "outputs": [],
   "source": [
    "\n",
    "plt.figure(figsize=(8,5))\n",
    "plt.plot(df.index, df[\"sepal length (cm)\"], label=\"Sepal Length\")\n",
    "plt.plot(df.index, df[\"sepal width (cm)\"], label=\"Sepal Width\")\n",
    "plt.title(\"Sepal Length & Width over Index\")\n",
    "plt.xlabel(\"Index\")\n",
    "plt.ylabel(\"Length (cm)\")\n",
    "plt.legend()\n",
    "plt.show()\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "c708fca7",
   "metadata": {},
   "outputs": [],
   "source": [
    "\n",
    "plt.figure(figsize=(6,4))\n",
    "sns.barplot(x=\"target\", y=\"petal length (cm)\", data=df, ci=None)\n",
    "plt.title(\"Average Petal Length per Species\")\n",
    "plt.xlabel(\"Species (0=setosa, 1=versicolor, 2=virginica)\")\n",
    "plt.ylabel(\"Average Petal Length (cm)\")\n",
    "plt.show()\n"
   ]
  },
