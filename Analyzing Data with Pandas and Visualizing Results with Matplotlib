    "\n",
    "import pandas as pd\n",
    "import seaborn as sns\n",
    "import matplotlib.pyplot as plt\n",
    "from sklearn.datasets import load_iris\n",
    "\n",
    "# Load Iris dataset from sklearn\n",
    "iris = load_iris(as_frame=True)\n",
    "df = iris.frame  # Convert to pandas DataFrame\n",
    "\n",
    "# Display first few rows\n",
    "print(\"First 5 rows of the dataset:\")\n",
    "display(df.head())\n",
    "\n",
    "# Check structure\n",
    "print(\"Dataset Info:\")\n",
    "print(df.info())\n",
    "\n",
    "# Check for missing values\n",
    "print(\"Missing Values:\")\n",
    "print(df.isnull().sum())\n"
   ]
  },
  {
   "cell_type": "markdown",
   "id": "75f9cffa",
   "metadata": {},
   "source": [
    "## ðŸ”¹ Task 2: Basic Data Analysis"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "id": "7555c446",
   "metadata": {},
   "outputs": [],
   "source": [
    "\n",
    "# Statistical summary\n",
    "print(\"Statistical Summary:\")\n",
    "display(df.describe())\n",
    "\n",
    "# Group by species and calculate mean of numerical columns\n",
    "group_means = df.groupby(\"target\").mean()\n",
    "print(\"Mean values grouped by species:\")\n",
    "display(group_means)\n",
    "\n",
    "# Observation\n",
    "print(\"Observation: Sepal length tends to increase from setosa â†’ versicolor â†’ virginica.\")\n"
   ]
  },
  {
   "cell_type": "markdown",
